INSTALLPROGS=adlmidi

CPPFLAGS += -I./include/ -DSUPPORT_VIDEO_OUTPUT -DSUPPORT_PUZZLE_GAME

CPPFLAGS_SO += $(CPPFLAGS) -DADLMIDI_BUILD -fPIC
CFLAGS_SO += $(CFLAGS) -DADLMIDI_BUILD -fPIC

all: adlmidi $(ADLMIDI_LIBNAME) $(ADLMIDI_STATICLIBNAME) gen_adldata dumpmiles dumpbank

adlmidi: obj/midiplay.o $(MIDIPLAY_LINK_LIB)
	$(CXXLINK)  $^  $(DEBUG) $(SDL) -o $@ $(LDLIBS_PLAY) -Wl,-rpath .

$(ADLMIDI_LIBNAME): obj/nukedopl3.o obj/adldata.o obj/adlinput.o obj/adlui.o obj/adlplay.o
	if [ ! "$(NOSHARE)" = "1" ]; then $(CXXLINK) -shared $^  $(DEBUG) -o $@ $(ADLMIDI_IMPLIB); fi

$(ADLMIDI_STATICLIBNAME): obj/nukedopl3.o obj/adldata.o obj/adlinput.o obj/adlui.o obj/adlplay.o
	$(AR) rcs $@ $^

obj/midiplay.o: utils/midiplay.cc src/adldata.hh
	$(CXX) -Isrc $(CPPFLAGS) $<  $(DEBUG) $(SDL) -c -o $@

obj/dbopl.o: utils/dbopl.cpp utils/dbopl.h
	$(CXX) $(CPPFLAGS_SO) $<  $(DEBUG)  -c -o $@

obj/nukedopl3.o: src/nukedopl3.c src/nukedopl3.h
	$(CC) $(CFLAGS_SO) $<  $(DEBUG)  -c -o $@

obj/adldata.o: src/adldata.cc src/adldata.hh
	$(CXX) $(CPPFLAGS_SO) $<  $(DEBUG)  -c -o $@

obj/adlinput.o: src/adlinput.cc include/adlinput.h
	$(CXX) $(CPPFLAGS_SO) $<  $(DEBUG)  -c -o $@

obj/adlui.o: src/adlui.cc include/adlui.h
	$(CXX) $(CPPFLAGS_SO) $<  $(DEBUG)  -c -o $@

obj/adlplay.o: src/adlplay.cc include/adlplay.h
	$(CXX) $(CPPFLAGS_SO) $<  $(DEBUG)  -c -o $@

gen_adldata: obj/gen_adldata.o obj/dbopl.o
	$(CXXLINK)  $^  $(DEBUG)  -o $@  $(LDLIBS)

obj/gen_adldata.o: utils/gen_adldata.cc utils/dbopl.h
	$(CXX) $(CPPFLAGS) -I./src $<  $(DEBUG)  -c -o $@

dumpmiles: obj/dumpmiles.o
	$(CXXLINK)  $^  $(DEBUG)  -o $@  $(LDLIBS)

obj/dumpmiles.o: utils/dumpmiles.cc
	$(CXX) $(CPPFLAGS) $<  $(DEBUG)  -c -o $@

dumpbank: obj/dumpbank.o
	$(CXXLINK)  $^  $(DEBUG)  -o $@  $(LDLIBS)

obj/dumpbank.o: utils/dumpbank.cc
	$(CXX) $(CPPFLAGS) $<  $(DEBUG)  -c -o $@

clean:
	for f in adlmidi dumpbank gen_adldata dumpmiles \
	 adlmidi.exe dumpbank.exe dumpmiles.exe gen_adldata.exe \
	 libadlcpp.dll.a $(ADLMIDI_LIBNAME) $(ADLMIDI_STATICLIBNAME); do \
	 if [ -f $$f ]; then $(RM) $$f; fi; \
	done
	for f in obj/*.o; do $(RM) $$f; done

include depfun.mak
